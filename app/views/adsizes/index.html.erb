<h1>Listing Ad Sizes</h1>

<table>
  <tr>
    <th>Ad Size</th>
    <th>Number of Listings</th>
  </tr>

<% for adsize in @adsizes %>
  <tr>
    <td><%=h adsize.adsize %></td>
    <td><%=h adsize.numlistings %></td>
    <td><%= link_to 'Show', adsize %></td>
    <td><%= link_to 'Edit', edit_adsize_path(adsize) %></td>
    <td><%= link_to 'Destroy', adsize, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New adsize', new_adsize_path %>
