<h1>Listing modalities</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for modality in @modalities %>
  <tr>
    <td><%=h modality.name %></td>
    <td><%= link_to 'Show', modality %></td>
    <td><%= link_to 'Edit', edit_modality_path(modality) %></td>
    <td><%= link_to 'Destroy', modality, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New modality', new_modality_path %>
