<div id="category">
<h2>Category: <%= link_to h(@category.name), :action => :show_category, :id => @category.id %></h2>
<h2>Subcategory: <%= h @subcategory.name %></h2>

<% if @subcategory.description and @subcategory.description.length > 0%>
<script language="JavaScript">
function fulldesc()
{
	$('description').innerHTML = "<%= @subcategory.format_text_esc_quote %>";
	$('tohide').hide();
}
</script>

<div id="description">
	<%= @subcategory.partial_description_esc_quote %>
	<% if @subcategory.partial_description != @subcategory.format_text %><a href="#" id="tohide" onclick="fulldesc()">&hellip; (more)</a><% end %>
</div>
<% end %>
<hr />
 
<%= render :partial => "show_listings" %>
</div>