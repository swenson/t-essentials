<div class="listings">
<% if @listings.length == 0 %>
  <i>No listings.</i>
<% end %>

<% for listing in @listings %>
<div class="listing">
  <p>Category: <%= link_to h(listing.category.name), :action => :show_category, :id => listing.category.id %></p>
  <% if listing.subcategory %>
    <p>Subcategory: <%= link_to h(listing.subcategory.name), :action => :show_subcategory, :id => listing.subcategory.id%></p>
  <% end %>
  <h3><%= h listing.title %></h3>
  <p>By: <a href="<%= h listing.email %>"><%= h listing.by %></a></p>
  <p>
  <%= h listing.body %>
  </p>
</div>
<% end %>

</div>