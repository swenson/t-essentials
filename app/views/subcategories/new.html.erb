<h1>New subcategory</h1>

<%= error_messages_for :subcategory %>

<% form_for(@subcategory) do |f| %>
  <p>
    <b>Category</b><br />
    <%= f.collection_select :category_id, Category.find(:all, :order => :name), :id, :name %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Long Description (for whattoexpectinasession.com)</b><br />
    <%= f.text_area :long_description %>
  </p>


  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', subcategories_path %>
