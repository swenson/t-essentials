<h1>Listing listings</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>By</th>
    <th>Email</th>
    <th>Start</th>
    <th>End</th>
    <th>Region</th>
    <th>Category</th>
    <th>Subcategory</th>
  </tr>

<% for listing in @listings %>
  <tr>
    <td><%=h listing.title %></td>
    <td><%=h listing.body %></td>
    <td><%=h listing.by %></td>
    <td><%=h listing.email %></td>
    <td><%=h listing.start %></td>
    <td><%=h listing.end %></td>
    <td><%=h listing.region.name %></td>
    <td><%=h listing.category.name %></td>
    <td><%=h listing.subcategory.name %></td>
    <td><%= link_to 'Show', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

