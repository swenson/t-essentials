<h1>Editing user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <% if @login_user.admin %>
  <p>
    <b>Associated Salesperson</b><br />
    <%= f.collection_select :salesperson_id, Salesperson.find(:all), :id, :name, {:include_blank => true} %>
  </p>
  <% end %>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Password</b><br />
    <%= f.password_field :password %>
  </p>
 
  <p>
    <b>Password</b><br />
    <%= f.password_field :password_confirmation %>
  </p>


  <% if @login_user.admin %>
  <p>
    <b>Admin</b><br />
    <%= f.check_box :admin %>
  </p>
  <% end %>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
