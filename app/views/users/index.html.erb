<h1>Listing users</h1>

<table>
  <tr>
    <th>Salesperson</th>
    <th>Name</th>
    <th>Email</th>
    <th>Password</th>
    <th>Admin</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.salesperson.name if user.salesperson %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td> *** </td>
    <td><%=h user.admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

