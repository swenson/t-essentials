<h1>New user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Associated Salesperson</b><br />
    <%= f.collection_select :salesperson_id, Salesperson.find(:all), :id, :name, {:include_blank => true} %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Password</b><br />
    <%= f.password_field :password %>
  </p>

  <p>
    <b>Confirm Password</b><br />
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <b>Administrator?</b><br />
    <%= f.check_box :admin %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
