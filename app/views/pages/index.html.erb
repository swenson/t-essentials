<%= button_to 'Create new page', new_page_path %>

<h1>Pages</h1>

<table>
  <tr class="header">
    <th>Name</th>
    <th>Content</th>
  </tr>

<% even = false %>
<% for page in @pages %>
	<tr class="<%= (even = !even) ? "even" : "odd" %>">
    <td><%=h page.name %></td>
    <td><%=h page.content %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>