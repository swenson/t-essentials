<h1>New category</h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Text</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Long Description (for whattoexpectinasession.com)</b><br />
    <%= f.text_area :long_description %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>
